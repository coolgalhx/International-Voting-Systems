<Window x:Class="International_Voting_Systems.VoterRegisteration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoterRegisteration"
        Height="450"
        Width="800"
        Background="{DynamicResource WindowBackground}"
        MouseWheel="Window_MouseWheel">

    <Grid>

        <Grid.LayoutTransform>
            <ScaleTransform x:Name="zoomTransform"
                        ScaleX="1"
                        ScaleY="1"/>
        </Grid.LayoutTransform>

        <Grid.Resources>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="#4B6CB7"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#4B6CB7"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <Style x:Key="RegisterBtn" TargetType="Button">
                <Setter Property="Background" Value="#28A745"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="TranslateBtn" TargetType="Button">
                <Setter Property="Background" Value="#6C63FF"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

        </Grid.Resources>

        <Label Name="lblname" Content="Enter Your Name" HorizontalAlignment="Left" Margin="57,30,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtname" HorizontalAlignment="Left" Margin="57,62,0,0" VerticalAlignment="Top" Width="140"/>

        <Label Name="lblemail" Content="Email" HorizontalAlignment="Left" Margin="226,28,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtemail" HorizontalAlignment="Left" Margin="226,62,0,0" VerticalAlignment="Top" Width="140" Text="Hibaq1040@gmail.com"/>

        <Label Name="lblgender" Content="Gender" HorizontalAlignment="Left" Margin="226,95,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtgender" HorizontalAlignment="Left" Margin="226,125,0,0" VerticalAlignment="Top" Width="140"/>

        <Label Name="lblvoterid" Content="Voter ID" HorizontalAlignment="Left" Margin="57,100,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtvoterid" HorizontalAlignment="Left" Margin="57,125,0,0" VerticalAlignment="Top" Width="140" Text="12345"/>

        <Label Name="lblage" Content="Age" HorizontalAlignment="Left" Margin="57,160,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtage" HorizontalAlignment="Left" Margin="57,185,0,0" VerticalAlignment="Top" Width="140" Text="33"/>

        <Label Name="lblcontactnumber" Content="Contact Number" HorizontalAlignment="Left" Margin="226,160,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtcontactnumber" HorizontalAlignment="Left" Margin="226,185,0,0" VerticalAlignment="Top" Width="140" Text="999"/>

        <Label Name="lblcity" Content="City" HorizontalAlignment="Left" Margin="57,220,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtcity" HorizontalAlignment="Left" Margin="57,245,0,0" VerticalAlignment="Top" Width="140"/>

        <Label Name="lblpostcode" Content="Postcode" HorizontalAlignment="Left" Margin="226,220,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtpostcode" HorizontalAlignment="Left" Margin="226,245,0,0" VerticalAlignment="Top" Width="140"/>

        <Label Name="lblcountry" Content="Country" HorizontalAlignment="Left" Margin="57,280,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtcountry" HorizontalAlignment="Left" Margin="57,305,0,0" VerticalAlignment="Top" Width="140"/>

        <Label Name="lbldob" Content="Date of Birth" HorizontalAlignment="Left" Margin="226,280,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="txtdob" HorizontalAlignment="Left" Margin="226,305,0,0" VerticalAlignment="Top" Width="140" Text="10.1.1999"/>

        <Button Name="btnregistervoter" Content="Register" Style="{StaticResource RegisterBtn}" HorizontalAlignment="Left" Margin="130,365,0,0" VerticalAlignment="Top" Width="150" Height="45"
                Click="btnregistervoter_Click"/>

        <Button Name="btntranslate" Content="Translate" Style="{StaticResource TranslateBtn}" HorizontalAlignment="Left" Margin="705,41,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="Translate_Click"/>

        <CheckBox Name="chklightmode" Content="LightMode" HorizontalAlignment="Right" Margin="0,15,20,0" VerticalAlignment="Top" Foreground="#4B6CB7" Checked="ThemeCheckBox_Checked" Unchecked="ThemeCheckBox_Unchecked"/>
        <Image HorizontalAlignment="Left" Height="61" Margin="689,357,0,0" VerticalAlignment="Top" Width="100" Source="/Security-FactoryMethod/eu-logo-big.png">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Button Content="" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="40" Width="42" Click="BtnTexttoSpeechn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/sound-symbol-2.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>

