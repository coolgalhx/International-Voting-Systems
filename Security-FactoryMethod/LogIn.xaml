<Window x:Class="International_Voting_Systems.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:International_Voting_Systems"
        mc:Ignorable="d"
        Title="International Voting System - Login"
        Height="450" Width="800"
        Background="#1E1E2E">

    <Grid Background="#FF4684B8">

        
        <TextBlock Text="International Voting System"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"
                   VerticalAlignment="Top"/>

       
        <TextBlock Text="Enter your Voter ID to continue"
                   FontSize="16"
                   Foreground="#CFCFCF"
                   HorizontalAlignment="Center"
                   Margin="0,161,0,0"
                   VerticalAlignment="Top"/>

      

        <TextBox Name="txtvoteridlogin"
                 Width="220"
                 Height="35"
                 FontSize="16"
                 HorizontalAlignment="Center"
                 Margin="0,200,0,0"
                 VerticalAlignment="Top"
                 Background="#FFF1F8F7"
                 Foreground="White"
                 BorderBrush="#5A5AFF"
                 BorderThickness="2"
                 Padding="8"/>

        
        <Button Content="Login"
                Width="180"
                Height="50"
                FontSize="18"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0,270,0,0"
                VerticalAlignment="Top"
                Background="#5A5AFF"
                Foreground="White"
                BorderBrush="#5A5AFF"
                Cursor="Hand"
                Click="btncheckcredentials_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="/Security-FactoryMethod/eu-logo-big.png">
           
        </Image>

    </Grid>
</Window>

