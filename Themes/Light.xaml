<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="White"/>
    <SolidColorBrush x:Key="ControlBackground" Color="White"/>
    <SolidColorBrush x:Key="ControlForeground" Color="Black"/>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>
    <SolidColorBrush x:Key="FormBackground" Color="#FF88DEEA"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#4B6CB7"/>
    <SolidColorBrush x:Key="RegisterGreen" Color="#28A745"/>
    <SolidColorBrush x:Key="TranslatePurple" Color="#6C63FF"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>

</ResourceDictionary>