<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ControlBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ControlForeground" Color="White"/>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}"/>
    </Style>

    <SolidColorBrush x:Key="FormBackground" Color="#1E2A38"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#7DA9F7"/>
    <SolidColorBrush x:Key="RegisterGreen" Color="#3CB371"/>
    <SolidColorBrush x:Key="TranslatePurple" Color="#9A86FD"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>

</ResourceDictionary>