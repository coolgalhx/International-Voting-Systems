<Window x:Class="International_Voting_Systems.ManageVoterAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageVoterAccounts" Height="450" Width="800">

    <Grid>

    
        <DataGrid x:Name="datagridvoters" ItemsSource="{Binding Voters}" AutoGenerateColumns="True" IsReadOnly="True" Margin="0,0,0,169" />

        <Button Name="btnReject" Content="Reject" HorizontalAlignment="Left" Margin="180,293,0,0" VerticalAlignment="Top" Height="80" Width="194" Click="Btnreject_Click" Background="#E74C3C" Foreground="White" FontWeight="Bold" BorderBrush="#7A1F16" BorderThickness="3"/>

        <Button Content="Clear Datagrid" Name="btnClearTable" HorizontalAlignment="Left" Margin="465,293,0,0" VerticalAlignment="Top" Height="80" Width="188" Click="BtnClearTable_Click_1" Background="#3498DB" Foreground="White" FontWeight="Bold" BorderBrush="#1F4E79" BorderThickness="3"/>

    </Grid>
</Window>

